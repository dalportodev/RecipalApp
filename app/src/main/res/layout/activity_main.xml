<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.killer.recipes.allrecipekillerapp.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by Ingredients"
        android:id="@+id/buttonSearchIngredients"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#172cec"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:id="@+id/buttonUpload"
        android:onClick="toBeImplemented"

        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/buttonSearchTitle"
        android:background="#172cec"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Recipes"
        android:id="@+id/buttonListView"
        android:onClick="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#172cec"
        android:elegantTextHeight="false"
        android:longClickable="true"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Title"
        android:id="@+id/buttonSearchTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="toBeImplemented"
        android:background="#172cec"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLogo"
        android:src="@drawable/logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#adbdf7" />

</RelativeLayout>
